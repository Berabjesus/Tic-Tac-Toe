#!/usr/bin/env ruby

# require 'colorize'

puts 'Welcome to the Tic-Tac-Toe Experience \n'

puts 'Player one please enter your name!'

player1 = gets.chomp

puts 'Player two please enter your name!'

player2 = gets.chomp

puts "Hi #{player1} Please choose your weapon.\nX or O ?"

grid = [[1, 2, 3], [4, 5, 6], [7, 8, 9]]
puts "Hi #{player1} Please choose your move"
print grid[0].join(' | ')
puts
print grid[1].join(' | ')
puts
print grid[2].join(' | ')
puts

move = gets.chomp
puts (1..9).any?(move.to_i) ? "#{player2} its your turn" : "Invalid move, try again!"